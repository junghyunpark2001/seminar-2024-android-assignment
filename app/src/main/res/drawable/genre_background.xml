<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- 배경 색상 설정 (필요 시 조정 가능) -->
    <solid android:color="@color/white" />

    <!-- 테두리 설정 -->
    <stroke
            android:width="2dp"
            android:color="@color/grey2" />  <!-- 테두리 색상 -->

    <!-- 모서리 둥글게 설정 -->
    <corners android:radius="8dp" />

    <!-- 내부 여백 설정 -->
    <padding
            android:left="8dp"
            android:top="4dp"
            android:right="8dp"
            android:bottom="4dp" />
</shape>
